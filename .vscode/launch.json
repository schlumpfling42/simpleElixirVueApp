    "version": "0.2.0",
    "configurations": [
        {
            "type": "mix_task",
            "name": "Launch server",
            "request": "launch",
            "task": "phx.server",
            "taskArgs": [
                "--no-halt"
            ],
            "projectDir": "${workspaceRoot}",
            "requireFiles": [
                "test/**/test_helper.exs"
                //,
                //"test/**/*_test.exs"
            ]
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:4000",
            "webRoot": "${workspaceFolder}"
        }
    ]
}